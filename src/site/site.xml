<?xml version="1.0" encoding="utf-8"?>
<project
    xmlns="http://maven.apache.org/DECORATION/1.7.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/DECORATION/1.7.0
                        http://maven.apache.org/xsd/decoration-1.7.0.xsd"
    name="${project.name}"
    combine.self="merge">

  <version position="right"/>
  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.6</version>
  </skin>

  <body>
    <menu name="Usage Documentation">
      <item name="Overview" href="index.html"/>
      <item name="JavaDocs" href="apidocs/index.html"/>
    </menu>
    <menu ref="reports"/>
    <footer><![CDATA[Copyright &copy; ${project.inceptionYear}#if(${project.inceptionYear} != ${date.year})&ndash;${date.year}#end, <a href="http://microbean.org/" target="_parent">MicroBean</a>. All rights reserved.]]></footer>
  </body>

  <custom>
    <fluidoSkin>
      <sideBarEnabled>true</sideBarEnabled>
      <topBarEnabled>false</topBarEnabled>
    </fluidoSkin>
  </custom>

</project>
